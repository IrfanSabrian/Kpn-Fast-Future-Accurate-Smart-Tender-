# ========================================
# KPN FAST - Frontend Environment Variables
# ========================================
#
# üìñ Panduan: Nuxt.js environment variables
# üîê JANGAN commit file .env ke Git!
#
# Setup:
# 1. Copy file ini: cp .env.example .env
# 2. Semua values sudah default, biasanya TIDAK perlu diubah
# 3. Hanya ubah jika backend ada di server lain
#


# ========================================
# 1. BACKEND API CONFIGURATION
# ========================================
#
# URL ke backend API
# Development: http://localhost:5000/api
# Production: https://api.your-domain.com/api
#
# ‚ö†Ô∏è Pastikan port sesuai dengan backend (default: 5000)
#

NUXT_PUBLIC_API_BASE_URL=http://localhost:5000/api


# ========================================
# 2. APPLICATION INFO
# ========================================

# Nama aplikasi (ditampilkan di title, header, dll)
NUXT_PUBLIC_APP_NAME=KPN FAST

# Versi aplikasi
NUXT_PUBLIC_APP_VERSION=1.0.0

# Deskripsi aplikasi
NUXT_PUBLIC_APP_DESCRIPTION=Fast And Smart Technology - Sistem Automasi Dokumen Pengadaan


# ========================================
# 3. GOOGLE DRIVE INTEGRATION
# ========================================
#
# URL viewer untuk preview dokumen dari Google Drive
# Digunakan untuk membuka dokumen hasil generate
#

# Base URL untuk file viewer
NUXT_PUBLIC_GDRIVE_VIEWER_URL=https://drive.google.com/file/d/

# Base URL untuk folder viewer
NUXT_PUBLIC_GDRIVE_FOLDER_URL=https://drive.google.com/drive/folders/


# ========================================
# 4. FEATURE FLAGS (Optional)
# ========================================

# Enable/disable AI features
NUXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable/disable document preview
NUXT_PUBLIC_ENABLE_DOCUMENT_PREVIEW=true

# Enable/disable debug mode (menampilkan debug info di console)
NUXT_PUBLIC_DEBUG_MODE=true


# ========================================
# 5. UI CONFIGURATION (Optional)
# ========================================

# Default theme (light/dark/auto)
NUXT_PUBLIC_DEFAULT_THEME=light

# Primary color (for Tailwind CSS)
# Format: hex color tanpa #
# Contoh: 3b82f6 (blue), 10b981 (green), 8b5cf6 (purple)
NUXT_PUBLIC_PRIMARY_COLOR=3b82f6


# ========================================
# 6. FILE UPLOAD LIMITS (Frontend Validation)
# ========================================

# Maksimal file size untuk upload (dalam MB)
# Harus sync dengan backend MAX_FILE_SIZE
# Backend default: 52428800 bytes = 50 MB
NUXT_PUBLIC_MAX_FILE_SIZE_MB=50

# Allowed file extensions untuk upload
# PDF untuk KAK, Excel untuk HPS/RAB
NUXT_PUBLIC_ALLOWED_PDF_EXTENSIONS=.pdf
NUXT_PUBLIC_ALLOWED_EXCEL_EXTENSIONS=.xlsx,.xls


# ========================================
# NOTES
# ========================================
#
# - Semua variabel dengan prefix NUXT_PUBLIC_ bisa diakses di client-side
# - Variabel tanpa prefix NUXT_PUBLIC_ hanya tersedia di server-side
# - Untuk production, update NUXT_PUBLIC_API_BASE_URL dengan URL production
# - Debug mode sebaiknya di-disable di production (set false)
#
# ========================================
